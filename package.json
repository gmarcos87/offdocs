{
  "name": "offline-docs",
  "version": "1.0.4",
  "description": "Always get some documentation on the modules you use, even offline",
  "main": "index.js",
  "bin": {
    "offline-docs": "bin/offline-docs"
  },
  "scripts": {
    "server-watch": "watchy -kw ./app.js -i '/\\.|/node_modules|/test$' -- ./bin/offline-docs",
    "browser-sync": "browser-sync start --proxy 'localhost:5000' --files 'site/**' --no-open",
    "watch-js": "watchify browser.js -o site/bundle.js -dv  -t [ babelify --presets [ es2015 ] ]",
    "dev": "npm run server-watch & npm run watch-js & npm run browser-sync",
    "postinstall": "browserify browser.js -o site/bundle.js -t [ babelify --presets [ es2015 ] ]"
  },
  "author": "Vincent Voyer <vincent@zeroload.net>",
  "license": "ISC",
  "dependencies": {
    "browserify": "^14.3.0",
    "compression": "^1.1.0",
    "es6-promise": "^4.1.0",
    "express": "^4.9.5",
    "highlight.js": "^9.10.0",
    "marked": "^0.3.2",
    "page": "^1.3.7",
    "serve-static": "^1.6.3",
    "superagent": "^3.5.2",
    "vue": "^2.2.6",
    "vue-infinite-loading": "^2.0.4",
    "vue-material": "^0.7.1"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.8",
    "install": "^0.8.8",
    "vueify": "^9.4.1",
    "watchify": "^3.9.0",
    "watchy": "^0.6.7"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  }
}
